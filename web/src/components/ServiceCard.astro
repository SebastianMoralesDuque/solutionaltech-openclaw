---
interface Props {
  title: string;
  description: string;
  icon: string;
}

const { title, description, icon } = Astro.props;
---

<div class="p-8 rounded-2xl bg-slate-900/50 backdrop-blur-sm border border-slate-800 hover:border-blue-500/50 hover:bg-slate-900 transition-all group relative overflow-hidden">
  <div class="absolute -right-4 -top-4 w-24 h-24 bg-blue-600/10 rounded-full blur-2xl group-hover:bg-blue-600/20 transition-colors"></div>
  <div class="text-3xl mb-4">{icon}</div>
  <h3 class="text-xl font-bold mb-4 text-white group-hover:text-blue-400 transition-colors">{title}</h3>
  <p class="text-slate-400 leading-relaxed">{description}</p>
</div>
